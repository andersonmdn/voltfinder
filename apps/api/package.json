{
  "name": "@voltfinder/api",
  "version": "1.0.0",
  "description": "VoltFinder API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:safe": "node scripts/check-port.js",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/jwt": "^7.2.0",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@prisma/client": "^6.18.0",
    "@voltfinder/core": "workspace:*",
    "@voltfinder/validations": "workspace:*",
    "bcryptjs": "^2.4.3",
    "fastify": "^4.24.0",
    "fastify-type-provider-zod": "^2.1.0",
    "pino": "^8.16.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^2.0.12",
    "@vitest/ui": "^1.5.0",
    "dotenv": "^16.4.5",
    "pino-pretty": "^13.1.1",
    "prisma": "^6.18.0",
    "supertest": "^6.3.3",
    "tsx": "^4.0.0",
    "typescript": "^5.1.3",
    "vitest": "^1.5.0"
  }
}
